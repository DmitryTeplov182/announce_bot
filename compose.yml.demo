services:
  announce-bot:
    build: .
    container_name: announce-bot
    env_file:
      - .env
    volumes:
      # Монтируем файл с точками старта для возможности редактирования
      - ./start_locations.json:/app/start_locations.json:ro
      # Монтируем кэш для сохранения GPX файлов между перезапусками
      - ./cache:/app/cache
    restart: always 